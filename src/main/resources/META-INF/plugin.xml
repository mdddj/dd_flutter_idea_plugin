<idea-plugin>
    <id>shop.itbug.FlutterCheckVersionX</id>
    <name>FlutterCheckVersionX</name>
    <vendor email="hlxsmail@gmail.com" url="https://itbug.shop">梁典典</vendor>

    <description><![CDATA[

        Flutter automatic detection tool

        Github:

        <a href="https://github.com/mdddj/dd_flutter_idea_plugin">https://github.com/mdddj/dd_flutter_idea_plugin</a>


        QQ group: 667186542



        <h3>Feature</h3>


            <ul>
                <li>Detect the latest plugin version and provide automatic repair function</li>
                <li>Quickly jump to the pub.dev plugin details page</li>
                <li>Detect packages that have never been used</li>
                <li>`final`,`var`,`const` Inline type hints for variables</li>
            <ul>

        ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>Dart</depends>
    <depends>io.flutter</depends>

    <applicationListeners>
        <listener class="socket.ProjectOpenListeners" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="yaml" displayName="Auto version show" groupPath="Yaml" groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs" enabledByDefault="true" level="ERROR" implementationClass="tools.AutoVersionTool"/>
        <completion.contributor language="yaml" implementationClass="hints.PluginVersionHints" order="first" />
        <postStartupActivity implementation="activity.FlutterProjectOpenActivity"/>
        <codeInspection.InspectionExtension implementation="tools.MyInspectionExtension" id="MyInspectionExtension"/>
        <notificationGroup id="plugin_new_version_notif" displayType="BALLOON"/>
        <codeInsight.inlayProvider implementationClass="inlay.PluginInlayHintsProvider" language="yaml"/>
        <codeInsight.inlayProvider implementationClass="inlay.dartfile.DartTypeInlayHintsProvider" language="Dart" />
        <projectService serviceImplementation="socket.ProjectSocketService"/>
        <toolWindow factoryClass="window.SocketWindow" id="Dio请求" anchor="bottom"/>
    </extensions>


    <actions>
        <action id="ToPub" class="actions.ToBrowser" text="前往PUB查看">
            <add-to-group group-id="EditorPopupMenu.GoTo" anchor="first"/>
        </action>
        <action id="CheckFlutterPluginVersionIsNew" class="actions.CheckFlutterPluginHasNewVersion" text="检测版本更新">
            <add-to-group group-id="EditorPopupMenu.GoTo" anchor="first"/>
        </action>
    </actions>


</idea-plugin>