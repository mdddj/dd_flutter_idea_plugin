<idea-plugin url="https://github.com/sonar-intellij-plugin/sonar-intellij-plugin"
             xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>shop.itbug.dd_flutter_plugin</id>
    <name>FlutterCheckVersionX</name>
    <vendor email="hlxsmail@gmail.com" url="https://itbug.shop">梁典典</vendor>

    <description><![CDATA[
    典典的idea flutter 插件工具的使用封装,不定时更新一些小功能
    已支持的功能:
    <ul>
        <li>选中插件名字跳转到pub</li>
    <ul>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                language="yaml"
                displayName="Auto version show"
                groupPath="Yaml"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="tools.AutoVersionTool"/>
        

        <postStartupActivity implementation="activity.FlutterProjectOpenActivity" />

        <codeInspection.InspectionExtension implementation="tools.MyInspectionExtension" id="MyInspectionExtension" />

<!--        通知  -->
        <notificationGroup id="plugin_new_version_notif"
                           displayType="BALLOON"
                           key="notification.group.name"/>

        <codeInsight.inlayProvider implementationClass="inlay.PluginInlayHintsProvider" language="yaml" />


    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="ToPub" class="actions.ToBrowser" text="前往PUB查看">
            <add-to-group group-id="EditorPopupMenu.GoTo" anchor="first"/>
        </action>
        <action id="CheckFlutterPluginVersionIsNew" class="actions.CheckFlutterPluginHasNewVersion" text="检测版本更新">
            <add-to-group group-id="EditorPopupMenu.GoTo" anchor="first"/>
        </action>
    </actions>


</idea-plugin>